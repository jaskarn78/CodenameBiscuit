
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="@android:color/transparent"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="54dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/display_event_image"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/transLivinBlack"
                    android:id="@+id/eventName_layout"
                    android:isScrollContainer="false"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="15dp"
                    app:layout_collapseMode="pin"
                    android:fitsSystemWindows="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Hoster"
                        android:textSize="20sp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/livinWhite"
                        android:id="@+id/event_hoster"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/event_hoster"
                        android:layout_alignBaseline="@id/event_hoster"
                        android:textColor="@color/livinWhite"
                        android:text="0.5 mi"
                        android:id="@+id/display_event_distance"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_below="@id/event_hoster"
                        android:text="Family Friendly"
                        android:textColor="@color/livinPink"
                        android:id="@+id/display_event_preference"
                        />

                </RelativeLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/transparentBlack"
                    android:layout_marginBottom="20dp"
                    app:layout_collapseMode="parallax">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Archived Events"
                        android:textColor="@color/livinWhite"
                        android:textSize="25sp"
                        android:id="@+id/toolbar_title" />
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/eventName_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/cardview_light_background"
                android:id="@+id/icons"
                android:gravity="center"
                >

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_phone_black_48dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="25dp"
                    android:tint="@color/livinPink"
                    android:id="@+id/event_call"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    />

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_directions_black_48dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:tint="@color/livinPink"
                    android:id="@+id/event_directions"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    />
                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_share_black_48dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:tint="@color/livinPink"
                    android:id="@+id/event_share"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    />
                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_language_black_48dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    android:tint="@color/livinPink"
                    android:id="@+id/event_website"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/icons"
                android:id="@+id/view"
                android:background="@color/black_overlay"/>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/webView"
                android:layout_below="@+id/icons"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/webView"
                android:id="@+id/view8"
                android:background="@color/black_overlay"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/webView"
                android:background="@color/livinWhite"
                android:id="@+id/description_layout"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/black_overlay"/>

                <ScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/display_event_description"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Event Description goes here"
                    android:textSize="15sp"
                    />
                </ScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_layout"
                android:background="@color/livinWhite"
                android:id="@+id/location_layout">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:id="@+id/view2"
                    android:background="@color/black_overlay"/>


                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/livinPink"
                    android:id="@+id/location_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_event_location"
                    android:layout_toEndOf="@+id/location_icon"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="Event address goes here"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:id="@+id/view3"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/display_event_location"
                    android:background="@color/black_overlay"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_layout"
                android:background="@color/livinWhite"
                android:id="@+id/date_layout">


                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:tint="@color/livinPink"
                    android:id="@+id/date_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_event_date"
                    android:layout_toEndOf="@+id/date_icon"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:text="Event date goes here"
                    />
                <TextView
                    android:id="@+id/display_event_time"
                    android:layout_below="@+id/display_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/date_icon"
                    android:layout_marginStart="20dp"
                    android:text="Event time goes here" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:id="@+id/view4"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/display_event_time"
                    android:background="@color/black_overlay"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_layout"
                android:background="@color/livinWhite"
                android:id="@+id/cost_layout">


                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_attach_money_black_24dp"
                    android:tint="@color/livinPink"
                    android:id="@+id/cost_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_event_cost"
                    android:layout_toEndOf="@+id/cost_icon"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="Event entry fee goes here"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:id="@+id/view5"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/display_event_cost"
                    android:background="@color/black_overlay"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cost_layout"
                android:background="@color/livinWhite"
                android:id="@+id/phone_layout">


                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_phone_black_48dp"
                    android:tint="@color/livinPink"
                    android:id="@+id/phone_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_event_phone"
                    android:layout_toEndOf="@+id/phone_icon"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/accent"
                    android:text="(916) 777-7777"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:id="@+id/view7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/display_event_phone"
                    android:background="@color/black_overlay"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_layout"
                android:background="@color/livinWhite"
                android:id="@+id/rate_layout">


             <TextView
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="5dp"
                 android:id="@+id/rate"
                 android:text="Leave a rating"
                 />

                <com.like.LikeButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rate"
                    android:layout_marginStart="20dp"
                    app:circle_start_color="@color/colorPrimary"
                    app:like_drawable="@drawable/thumb_on"
                    app:unlike_drawable="@drawable/thumb_off"
                    app:dots_primary_color="@color/colorPrimary"
                    app:dots_secondary_color="@color/livinPink"
                    app:circle_end_color="@color/livinPink"
                    app:icon_size="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/like"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="2 Likes"
                    android:textSize="20dp"
                    android:id="@+id/currentRating"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:id="@+id/view6"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/currentRating"
                    android:background="@color/black_overlay"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rate_layout"
                android:background="@color/livinWhite"
                android:id="@+id/map_layout">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:id="@+id/view9"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/mapView"
                    android:background="@color/black_overlay"/>
            </RelativeLayout>

        </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

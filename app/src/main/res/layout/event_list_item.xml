<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/activity_main"
  >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp"
        android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_relative_layout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_event_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_name"
            android:layout_toRightOf="@+id/iv_event_image"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_location"
            android:layout_toRightOf="@+id/iv_event_image"
            android:layout_below="@+id/tv_event_preference"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_preference"
            android:layout_toRightOf="@+id/iv_event_image"
            android:layout_below="@+id/tv_event_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:layout_below="@id/tv_event_location"
            android:layout_toRightOf="@+id/iv_event_image"
            android:text="Age: 21+"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_location"
            android:id="@+id/cost"
            android:layout_toRightOf="@id/age"
            android:paddingLeft="10dp"
            android:text="Cost: $$$"
            android:paddingBottom="10dp"
            />
        <ImageButton
            android:id="@+id/parent_list_item_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_event_name"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/iv_event_image"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:id="@+id/extend">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:id="@+id/collapseImage"
            android:src="@drawable/liv1"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collapseImage">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/livinPink"
            app:itemIconTint="@color/livinWhite"
            app:itemTextColor="@color/livinWhite"
            app:menu="@menu/bottom_navigation_main" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


 </android.support.v7.widget.CardView>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/event_list"
    >
    <com.daimajia.swipe.SwipeLayout
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#63ed65"
            android:gravity="center"
            android:tag="Bottom3"
            android:weightSum="10">

            <ImageView
                android:id="@+id/trash"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_restore_white_24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Restore Item?"
                android:textColor="#fff"
                android:textSize="17sp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:background="@color/livinWhite"
                android:layout_marginEnd="2dp"
                android:text="Yes,Restore"
                android:textColor="#63ed65" />
        </LinearLayout>




    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardElevation="2dp"
        card_view:contentPadding="1dp"

       >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:id="@+id/card_relative_layout"
        android:foreground="?android:attr/selectableItemBackground"

        >
        <ImageView
            android:id="@+id/row_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:clickable="true"
            android:src="@drawable/ic_shortcut_more_vert" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_event_image"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_name"
            android:layout_toRightOf="@+id/iv_event_image"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_hoster"
            android:layout_toRightOf="@+id/iv_event_image"
            android:layout_below="@+id/tv_event_preference"
            android:textSize="10sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_location"
            android:layout_toRightOf="@+id/iv_event_image"
            android:layout_below="@+id/tv_event_hoster"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_preference"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/tv_event_name"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_location"
            android:id="@+id/cost"
            android:layout_toRightOf="@+id/iv_event_image"
            android:text="Entrance Fee: $$$"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:layout_below="@id/cost"
            android:layout_toRightOf="@+id/iv_event_image"
            android:visibility="gone"
            android:text="Age Min: 21+"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_distance"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/iv_event_image"
            android:layout_below="@+id/cost" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_date"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_event_name"
            android:layout_marginTop="7dp"
            android:layout_alignParentEnd="true"
            android:paddingBottom="5dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age"
            android:id="@+id/start_time"
            android:layout_toRightOf="@id/iv_event_image"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_event_image"
            android:visibility="gone"
            android:id="@+id/extend">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/extra_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="additional event info"
                    android:padding="25dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"/>

                <ScrollView android:id="@+id/swipeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/webView"
                    android:visibility="gone"
                    >
                </WebView>
                </ScrollView>

                <LinearLayout android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/livinBlack"
                    android:layout_alignParentBottom="true" style="@android:style/Theme.NoTitleBar">

                    <ImageButton android:id="@+id/saveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/calendar"
                        android:background="@color/livinPink"
                        android:text="Add to Calendar" />

                    <ImageButton android:id="@+id/shareButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:src="@drawable/share"
                        android:background="@color/livinPink"
                        android:text="Save" />
                    <ImageButton android:id="@+id/linkButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/linkvariant"
                        android:background="@color/livinPink"
                        android:text="Save" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


 </android.support.v7.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>


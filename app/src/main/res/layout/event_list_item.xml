<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/event_list"
    >
    <com.daimajia.swipe.SwipeLayout
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/livinBlack"
            android:gravity="center"
            android:tag="Bottom3"
            android:weightSum="10">

            <ImageView
                android:id="@+id/trash"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_restore_white_24dp"
                android:tint="#63ed65"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Restore Item?"
                android:textColor="#63ed65"
                android:textSize="17sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginEnd="2dp">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:background="#63ed65"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="3dp"
                    android:text="Yes,Restore"
                    android:textColor="@color/livinWhite" />
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="6"
                    android:background="#FF0000"
                    android:layout_marginEnd="2dp"
                    android:text="No, Cancel"
                    android:textColor="@color/livinWhite" />
            </LinearLayout>

        </LinearLayout>




    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:clickable="true"
        card_view:cardElevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:contentPadding="1dp"
       >

        <include layout="@layout/standard_layout" />


 </android.support.v7.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>

